#define INTC_DEVICE_ID		XPAR_INTC_0_DEVICE_ID
#define TMRCTR_INTERRUPT_ID	 XPAR_INTC_0_TMRCTR_0_VEC_ID

#define TIMER_CNTR_0	 1


#define RESET_VALUE	 0xFFFFD8EF //10000 hz

